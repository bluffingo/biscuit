{% extends "_layout.twig" %}

{% set title = "Notifications" %}

{% block content %}
    <div class="section">
        <div class="section-title">
            <h1>Notifications</h1>
            <a href="notices?action=clear_all">Clear all</a>
        </div>
        <div class="content-box">
            {% for notice in data %}
                <div class="content-entry">
                    <div class="content-notice">
                        <table cellpadding="0" cellspacing="0">
                            <tr valign="top">
                                <td>
                                    <img src="{{ profile_picture(notice.sender.info.username) }}" class="pfp">
                                </td>
                                <td>
                                    {{ notice.intro }} {{ user_link(notice.sender) }}
                                    <br>
                                    {{ notice.detail.info }}
                                    <br>
                                    <small>
                                        {{ notice.time | relative_time }}
                                        {% if notice.detail.origin %}on {{ notice.detail.origin }}{% endif %}
                                    </small>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            {% else %}
                No notifications.
            {% endfor %}
        </div>
    </div>
{% endblock %}